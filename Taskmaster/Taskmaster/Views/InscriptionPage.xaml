<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Taskmaster.Views.InscriptionPage"
             Title="Inscription">

    <VerticalStackLayout Padding="20" Spacing="15">
        <Entry x:Name="NomEntry" Placeholder="Nom" />
        <Entry x:Name="PrenomEntry" Placeholder="Prenom" />
        <Entry x:Name="EmailEntry" Placeholder="Email" Keyboard="Email" />
        <Entry x:Name="MotDePasseEntry" Placeholder="Mot de passe" IsPassword="True" />

        <Button Text="S'inscrire" Clicked="OnInscriptionClicked" />
    </VerticalStackLayout>
</ContentPage>
